{
  "name": "run-script-as-admin",
  "displayName": "run-script-as-admin",
  "description": "Run PowerShell scripts with elevated privileges from VS Code. Requires PowerShell 7+ for full Unicode and emoji support.",
  "version": "0.0.1",
  "publisher": "thimpat",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thimpat/run-script-as-admin.git"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "run-script-as-admin.runScript",
        "title": "Run Powershell Script as Admin"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "run-script-as-admin.runScript",
          "when": "resourceExtname == .ps1",
          "group": "navigation"
        },
        {
          "command": "run-script-as-admin.runScript",
          "when": "resourceExtname == .bat",
          "group": "navigation"
        },
        {
          "command": "run-script-as-admin.runScript",
          "when": "resourceExtname == .cmd",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "keywords": [
    "powershell",
    "admin",
    "elevated",
    "runas",
    "scripts",
    "automation",
    "windows"
  ],
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}